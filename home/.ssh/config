# Reuse Exisiting Connections if available
ControlMaster 	auto
ControlPath 	~/.ssh/tmp/%h_%p_%r

# Set defaults for all work machines.
Host *.ecovate.com *.readytalk.com *.1900proxy
  User dborg
  ForwardAgent	yes
  ExitOnForwardFailure yes

# Setup a shortcut to specialized (my box) @ the office
Host specialized.1900proxy
  HostName specialized.e.ecovate.com
  ProxyCommand ssh -q 1900.readytalk.com nc -q0 specialized.e.ecovate.com 22
