jenkins_cli="${HOME}/bin/jenkins-cli.jar"

function download-jenkins-cli {
  mkdir -p $(dirname "${jenkins_cli}")
  [[ ! -f "${jenkins_cli}" ]] && \
    curl https://builder.ecovate.com/jnlpJars/jenkins-cli.jar > "${HOME}/bin/jenkins-cli.jar"
}

function builder {
  download-jenkins-cli

  java -jar "${jenkins_cli}" -s "https://builder.ecovate.com" ${@}
}