# Keep my .ssh stuff private.
chmod 700 ${HOMESICK}/bashrc/home/.ssh

case ${PLATFORM} in
  darwin)
    # Setup ssh stuff.
    if [[ -z $SSH_AUTH_SOCK ]]; then
      ssh-add -K
    else
      echo "SSH agent using key in OSX keychain."
    fi
    ;;
  *)
    # Setup ssh agent.
    if [[ -z $SSH_AUTH_SOCK ]]; then
      source ${HOME}/.ssh/ssh-login
    fi
    ;;
esac
